<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <!-- <link rel="stylesheet" href="/main.css"> -->
</head>
<body class="grey-bg">

  <%- include('nav.ejs') %>

    <!-- <%= JSON.stringify(posts) %> -->
    <!-- 
        server.js에서 posts라는 변수로 DB에 있는 게시물들의
        ID를 받아왔음
    -->

    <% for(let i = 0; i<posts.length; i++) { %>
      <div class="white-bg">
        <div class="list-box">
          <h4>
            <a href="/detail/<%= posts[i]._id %>" style="text-decoration: none;">
                <%= posts[i].title %>
            </a>
            <a href="/edit/<%= posts[i]._id %>" style="text-decoration: none;">✏️</a> 
            <span class="delete" data-id="<%= posts[i]._id %>">🗑️</span>
          </h4>
          <p> <%= posts[i].content %> </p>
        </div>
      </div>
    <% } %>

    <script>
      // 각 삭제 버튼에 대해 이벤트 리스너를 추가합니다.
      document.querySelectorAll('.delete').forEach(function(span) {
        span.addEventListener('click', function(e) {
          // 클릭된 버튼의 데이터 ID를 가져와서 삭제 요청을 보냅니다.
          fetch('/delete?docid=' + e.target.dataset.id, {
            method: 'DELETE'
          });
        });
      });
    </script>
</body>
</html>




